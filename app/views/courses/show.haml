%h1=@course.name

= link_to("Back to index", root_path)
%div.content
  #courses
    %p
      %b Name:
      = @course.name
    %p
      %b Description:
      = display_line_breaks(@course.description)
    %p
      %b Active Dates:
      = "#{display_datetime(@course.start_at)} to #{display_datetime(@course.end_at)}"
    %p
      %b Holes:
      %ul
        - if @course.holes.any?
          - @course.holes.each do |hole|
            %li= link_to(hole.name, hole_path(hole))
